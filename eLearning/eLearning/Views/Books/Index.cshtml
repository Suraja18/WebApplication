@model IEnumerable<Books>
@{
    ViewData["Title"] = "List of Books";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.Picture" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Publish date: </b>@item.Publishdate</p>
                            <p class="card-text"><b>Price: </b>@item.Price</p>
                            
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i>Show Details</a>
                                <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i>Show Full Course</a>
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



<div style="position: fixed; right: 25px; bottom: 50px;" class="text-white">
    <a class="btn btn-success" asp-controller="Books" asp-action="Create"><i class="bi bi-plus-circle"></i>Add New</a>
</div>